<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PageSpeed Comparison Report</title>
    <style>
      * { box-sizing: border-box; }
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
      }

      .container {
        background: #fff;
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
      }

      h1 {
        text-align: center;
        color: #1a202c;
        font-size: 2.5rem;
        margin: 0 0 10px 0;
        font-weight: 700;
      }

      .subtitle {
        text-align: center;
        color: #718096;
        font-size: 1.1rem;
        margin-bottom: 40px;
      }

      .comparison-card {
        background: #fff;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        margin-bottom: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .comparison-card:hover {
        box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        transform: translateY(-2px);
      }

      .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 12px 20px;
        font-size: 1.1rem;
        font-weight: 600;
      }

      .card-body {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0;
      }

      .version-section {
        padding: 20px;
        border-right: 2px solid #e2e8f0;
      }

      .version-section:last-child {
        border-right: none;
      }

      .version-title {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #a0aec0;
        margin-bottom: 12px;
        font-weight: 600;
      }

      .old-version .version-title { color: #e53e3e; }
      .new-version .version-title { color: #38a169; }

      .metric-grid {
        display: grid;
        gap: 10px;
      }

      .metric {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 12px;
        background: #f7fafc;
        border-radius: 6px;
        border-left: 3px solid #cbd5e0;
      }

      .metric-label {
        font-size: 0.85rem;
        color: #4a5568;
        font-weight: 500;
      }

      .metric-value {
        font-size: 0.95rem;
        font-weight: 700;
      }

      .performance-score {
        font-size: 1.8rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 12px;
        padding: 12px;
        background: #f7fafc;
        border-radius: 8px;
      }

      .score-good { color: #38a169; }
      .score-medium { color: #d69e2e; }
      .score-bad { color: #e53e3e; }

      .diff-badge {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-left: 8px;
      }

      .diff-improved {
        background: #c6f6d5;
        color: #22543d;
      }

      .diff-worse {
        background: #fed7d7;
        color: #742a2a;
      }

      .diff-neutral {
        background: #e2e8f0;
        color: #2d3748;
      }

      .url-display {
        font-size: 0.75rem;
        color: #718096;
        margin-top: 10px;
        padding-top: 10px;
        border-top: 1px solid #e2e8f0;
        word-break: break-all;
      }

      @media (max-width: 968px) {
        .card-body {
          grid-template-columns: 1fr;
        }
        .version-section {
          border-right: none;
          border-bottom: 2px solid #e2e8f0;
        }
        .version-section:last-child {
          border-bottom: none;
        }
      }

      .summary {
        text-align: center;
        padding: 30px;
        background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
        border-radius: 10px;
        margin-bottom: 30px;
        border: 2px solid #e2e8f0;
      }

      .summary-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 20px;
      }

      .summary-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
      }

      .stat-card {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      }

      .stat-label {
        font-size: 0.85rem;
        color: #718096;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
      }

      .stat-value {
        font-size: 2rem;
        font-weight: 800;
        color: #1a202c;
      }

      .stat-value.positive {
        color: #38a169;
      }

      .stat-value.negative {
        color: #e53e3e;
      }

      .stat-subtext {
        font-size: 0.8rem;
        color: #a0aec0;
        margin-top: 4px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>üöÄ PageSpeed Insights Comparison</h1>
      <p class="subtitle">Side-by-side performance analysis for {{totalPages}} pages</p>

      <div class="summary">
        <div class="summary-title">üìä Overall Performance Summary</div>
        <div class="summary-stats">
          <div class="stat-card">
            <div class="stat-label">Old Average</div>
            <div class="stat-value">{{summary.oldAvgPerf}}</div>
            <div class="stat-subtext">Performance Score</div>
          </div>
          <div class="stat-card">
            <div class="stat-label">New Average</div>
            <div class="stat-value {{#if (gt summary.avgImprovement 0)}}positive{{else}}negative{{/if}}">{{summary.newAvgPerf}}</div>
            <div class="stat-subtext">Performance Score</div>
          </div>
          <div class="stat-card">
            <div class="stat-label">Improvement</div>
            <div class="stat-value {{#if (gt summary.avgImprovement 0)}}positive{{else}}negative{{/if}}">
              {{#if (gt summary.avgImprovement 0)}}+{{/if}}{{summary.improvementPercent}}%
            </div>
            <div class="stat-subtext">{{#if (gt summary.avgImprovement 0)}}+{{/if}}{{summary.avgImprovement}} points</div>
          </div>
          <div class="stat-card">
            <div class="stat-label">Pages Improved</div>
            <div class="stat-value positive">{{summary.pagesImproved}}</div>
            <div class="stat-subtext">{{summary.pagesRegressed}} regressed</div>
          </div>
        </div>
      </div>

      {{#each comparisons}}
        <div class="comparison-card">
          <div class="card-header">
            üìÑ {{pageName}}
          </div>
          <div class="card-body">
            <!-- Old Version -->
            <div class="version-section old-version">
              <div class="version-title">üî¥ Old Version</div>
              {{#if old.error}}
                <div style="color: #e53e3e; padding: 20px; text-align: center;">
                  ‚ùå Analysis failed for this page
                </div>
              {{else}}
                <div class="performance-score {{scoreClass old.performance}}">
                  {{round old.performance}}
                </div>
                <div class="metric-grid">
                  <div class="metric">
                    <span class="metric-label">First Contentful Paint</span>
                    <span class="metric-value">{{old.fcp}}</span>
                  </div>
                  <div class="metric">
                    <span class="metric-label">Largest Contentful Paint</span>
                    <span class="metric-value">{{old.lcp}}</span>
                  </div>
                  <div class="metric">
                    <span class="metric-label">Cumulative Layout Shift</span>
                    <span class="metric-value">{{old.cls}}</span>
                  </div>
                  <div class="metric">
                    <span class="metric-label">Total Blocking Time</span>
                    <span class="metric-value">{{old.tbt}}</span>
                  </div>
                </div>
                <div class="url-display">{{old.url}}</div>
              {{/if}}
            </div>

            <!-- New Version -->
            <div class="version-section new-version">
              <div class="version-title">üü¢ New Version</div>
              {{#if new.error}}
                <div style="color: #e53e3e; padding: 20px; text-align: center;">
                  ‚ùå Analysis failed for this page
                </div>
              {{else}}
                <div class="performance-score {{scoreClass new.performance}}">
                  {{round new.performance}}
                  {{#unless old.error}}
                    <span class="diff-badge {{diffClass old.performance new.performance}}">
                      {{diffValue old.performance new.performance}}
                    </span>
                  {{/unless}}
                </div>
                <div class="metric-grid">
                  <div class="metric">
                    <span class="metric-label">First Contentful Paint</span>
                    <span class="metric-value">{{new.fcp}}</span>
                  </div>
                  <div class="metric">
                    <span class="metric-label">Largest Contentful Paint</span>
                    <span class="metric-value">{{new.lcp}}</span>
                  </div>
                  <div class="metric">
                    <span class="metric-label">Cumulative Layout Shift</span>
                    <span class="metric-value">{{new.cls}}</span>
                  </div>
                  <div class="metric">
                    <span class="metric-label">Total Blocking Time</span>
                    <span class="metric-value">{{new.tbt}}</span>
                  </div>
                </div>
                <div class="url-display">{{new.url}}</div>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </body>
</html>
